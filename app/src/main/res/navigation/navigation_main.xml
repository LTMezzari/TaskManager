<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/navigation_main"
    app:startDestination="@id/boardsFragment">

    <fragment
        android:id="@+id/boardsFragment"
        android:name="mezzari.torres.lucas.taskmanager.flow.main.boards.BoardsFragment"
        android:label="BoardsFragment" >
        <action
            android:id="@+id/action_boardsFragment_to_boardFragment"
            app:destination="@id/boardFragment" />
    </fragment>
    <fragment
        android:id="@+id/boardFragment"
        android:name="mezzari.torres.lucas.taskmanager.flow.main.board.BoardFragment"
        android:label="BoardFragment" >
        <action
            android:id="@+id/action_boardFragment_to_taskFragment"
            app:destination="@id/taskFragment" />
    </fragment>
    <fragment
        android:id="@+id/taskFragment"
        android:name="mezzari.torres.lucas.taskmanager.flow.main.task.TaskFragment"
        android:label="TaskFragment" />
</navigation>